<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.liuzhuoming23.svea.app.mapper.AccountMapper">

  <insert id="insert" parameterType="com.github.liuzhuoming23.svea.app.domain.Account">
    insert into account(username,password,role_id)values(#{username},#{password},#{roleId})
  </insert>

  <select id="select" parameterType="com.github.liuzhuoming23.svea.app.domain.Account"
    resultType="com.github.liuzhuoming23.svea.app.domain.Account">
    select id,username,'******' password,role_id roleId,add_datetime addDatetime,enable from account
    <where>
      <if test="id != null">
        and id=#{id}
      </if>
      <if test="roleId != null">
        and role_id=#{roleId}
      </if>
      <if test="username != null and username != ''">
        and username=#{username}
      </if>
      <if test="enable != null">
        and enable=#{enable}
      </if>
    </where>
  </select>
  <select id="selectOneByUsername" parameterType="String"
    resultType="com.github.liuzhuoming23.svea.app.domain.Account">
    select id,username,password,role_id roleId,add_datetime addDatetime,enable from account
    where username=#{username}
  </select>
  <select id="selectOneById" parameterType="int"
    resultType="com.github.liuzhuoming23.svea.app.domain.Account">
    select id,username,password,role_id roleId,add_datetime addDatetime,enable from account
    where id=#{id}
  </select>
  <update id="updatePasswordByUsername"
    parameterType="com.github.liuzhuoming23.svea.app.domain.Account">
    update account
    set password=#{password}
    where username=#{username}
  </update>
  <delete id="deleteOneByUsername" parameterType="String">
    delete from account
    where username=#{username}
  </delete>
</mapper>
