<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.liuzhuoming23.svea.app.mapper.DictItemMapper">

  <select id="selectByDictCode" parameterType="String"
    resultType="com.github.liuzhuoming23.svea.app.domain.DictItem">
    select id,dict_id dictId,context,val,sort
    from dict_item
    where dict_id=(select id
                   from dict
                   where code=#{code})
  </select>
  <select id="selectByDictIdAndDictItemVal"
    resultType="com.github.liuzhuoming23.svea.app.domain.DictItem">
    select id,dict_id dictId,context,val,sort
    from dict_item
    where dict_id=#{dictId}
    and val=#{val}
  </select>
  <select id="selectByDictId" parameterType="int"
    resultType="com.github.liuzhuoming23.svea.app.domain.DictItem">
    select id,dict_id dictId,context,val,sort
    from dict_item
    where dict_id=#{dictId}
  </select>
  <insert id="insert" parameterType="com.github.liuzhuoming23.svea.app.domain.DictItem">
    insert into dict_item
    (dict_id,context,val,sort)
    values
    (#{dictId},#{context},#{val},#{sort})
  </insert>
  <delete id="deleteByDictId" parameterType="int">
    delete from dict_item
    where dict_id=#{dictId}
  </delete>
</mapper>
